{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["node"],
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@data/*": ["./src/data/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@styles/*": ["./src/styles/*"]
		}
	},
	"include": [
		"**/*.js",
		"**/*.jsx",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"build/types/**/*.ts",
		"next-env.d.ts"
	],
	"exclude": [".next", "coverage", "dist", "next.config.js", "node_modules", "out", "postcss.config.js", "tmp"]
}
