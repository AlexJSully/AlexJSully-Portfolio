{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["node", "react", "react-dom", "jest", "@testing-library/jest-dom"],
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@configs/*": ["./src/configs/*"],
			"@data/*": ["./src/data/*"],
			"@helpers/*": ["./src/helpers/*"],
			"@images/*": ["./src/images/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@styles/*": ["./src/styles/*"],
			"@util/*": ["./src/util/*"]
		}
	},
	"include": [
		"**/*.js",
		"**/*.jsx",
		"**/*.ts",
		"**/*.tsx",
		".next/dev/types/**/*.ts",
		".next/types/**/*.ts",
		"build/types/**/*.ts",
		"next-env.d.ts",
		"types/**/*.d.ts"
	],
	"exclude": [
		".next",
		"coverage",
		"dist",
		"next.config.js",
		"node_modules",
		"out",
		"postcss.config.js",
		"tmp",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx"
	]
}
